CLOCK_ICON="◷"
MUSIC_ICON="►"
V4_ICON="♶"
V6_ICON="♸"
LAN_ICON="☍"
WLAN_ICON="☫"
UPLOAD_ICON="↗"
DOWNLOAD_ICON="↙"
QUALITY_ICON="⌔"

