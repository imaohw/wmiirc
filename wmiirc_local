STATUS_MSG_COLOR='#ffffff #333333 #3e3e3e'

export WMII_FONT='xft:DejaVu Sans Mono:size=7:antialias=true:autohint=true'

#icons
VOLTAGE_ICON="⚡"
SUN_ICON="☀"
